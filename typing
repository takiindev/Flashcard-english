<body>
    <div class="container">
        <h1>Luy·ªán G√µ T·ª´ V·ª±ng IELTS</h1>
        <div class="vocab-card">
            <p id="vietnamese-meaning" class="meaning-text">ƒêang t·∫£i t·ª´ v·ª±ng...</p>
            
            <div id="hint-display" class="hint-display"></div>
            
            <input type="text" id="user-input" placeholder="G√µ t·ª´ ti·∫øng Anh ·ªü ƒë√¢y..." autofocus autocomplete="off" disabled>
        </div>
        
        <button id="next-word-btn" disabled>T·ª´ Ti·∫øp Theo</button>
        <p id="message"></p>
    </div>

    <script>
        let vocabulary = []; // M·∫£ng n√†y s·∫Ω ƒë∆∞·ª£c ƒëi·ªÅn t·ª´ file JSON
        let currentWordIndex = 0;
        let currentWord = "";
        let initialHintChars = [];

        const meaningEl = document.getElementById('vietnamese-meaning');
        const hintDisplayEl = document.getElementById('hint-display');
        const inputEl = document.getElementById('user-input');
        const nextBtn = document.getElementById('next-word-btn');
        const messageEl = document.getElementById('message');

        /**
         * T·∫£i d·ªØ li·ªáu t·ª´ v·ª±ng t·ª´ file words.json
         */
        async function loadVocabulary() {
            try {
                const response = await fetch('words.json');
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                const data = await response.json();
                
                // Chu·∫©n h√≥a d·ªØ li·ªáu: Lo·∫°i b·ªè (n), (v),... trong 'en'
                vocabulary = data.map(item => ({
                    vn: item.vn,
                    en: item.en.replace(/\s*\([^)]*\)\s*$/, '').trim()
                }));
                
                if (vocabulary.length > 0) {
                    meaningEl.textContent = 'ƒê√£ t·∫£i xong. B·∫Øt ƒë·∫ßu n√†o!';
                    nextBtn.disabled = false;
                    inputEl.disabled = false;
                    loadNewWord();
                } else {
                    meaningEl.textContent = 'L·ªói: Kh√¥ng t√¨m th·∫•y t·ª´ v·ª±ng trong file JSON.';
                }
            } catch (error) {
                console.error('L·ªói khi t·∫£i t·ª´ v·ª±ng:', error);
                meaningEl.textContent = `L·ªói khi t·∫£i file words.json: ${error.message}. Vui l√≤ng ki·ªÉm tra t√™n file v√† c·∫•u tr√∫c.`;
            }
        }

        /**
         * Ch·ªçn t·ª´ ng·∫´u nhi√™n v√† hi·ªÉn th·ªã.
         */
        function loadNewWord() {
            if (vocabulary.length === 0) return;

            currentWordIndex = Math.floor(Math.random() * vocabulary.length);
            currentWord = vocabulary[currentWordIndex].en.toLowerCase(); 
            const vnMeaning = vocabulary[currentWordIndex].vn;

            meaningEl.textContent = vnMeaning;
            inputEl.value = ''; 
            inputEl.disabled = false;
            inputEl.focus();
            messageEl.textContent = 'B·∫Øt ƒë·∫ßu g√µ t·ª´ ti·∫øng Anh.';
            
            // T·∫°o m·∫£ng k√Ω t·ª± g·ª£i √Ω ban ƒë·∫ßu
            initialHintChars = Array.from(currentWord).map(char => {
                if (/[a-z]/.test(char)) {
                    return '*';
                } 
                else {
                    return char;
                }
            });

            // Hi·ªÉn th·ªã g·ª£i √Ω ban ƒë·∫ßu
            hintDisplayEl.innerHTML = `<span class="incorrect">${initialHintChars.join('')}</span>`; 
        }

        /**
         * X·ª≠ l√Ω s·ª± ki·ªán khi ng∆∞·ªùi d√πng g√µ ph√≠m.
         */
        function handleInput() {
            const userInput = inputEl.value.toLowerCase(); 
            let hintHTML = '';
            let isMistake = false;
            let isCompleteAndCorrect = true;

            for (let i = 0; i < currentWord.length; i++) {
                const targetChar = currentWord[i];
                const userChar = userInput[i];

                if (userChar === undefined) {
                    const hintChar = initialHintChars[i];
                    hintHTML += `<span class="incorrect">${hintChar}</span>`;
                    isCompleteAndCorrect = false; 
                    isMistake = true; 
                } 
                else if (isMistake) {
                    hintHTML += `<span class="incorrect">${userChar}</span>`;
                    isCompleteAndCorrect = false;
                }
                else if (targetChar === userChar) {
                    hintHTML += `<span class="correct">${targetChar}</span>`;
                } 
                else {
                    hintHTML += `<span class="incorrect">${userChar}</span>`;
                    isMistake = true; 
                    isCompleteAndCorrect = false;
                }
            }
            
            // N·∫øu ng∆∞·ªùi d√πng g√µ d∆∞ k√Ω t·ª±, t√¥ ƒë·ªè ph·∫ßn d∆∞
            if (userInput.length > currentWord.length) {
                const excess = userInput.substring(currentWord.length);
                hintHTML += `<span class="incorrect">${excess}</span>`;
                isCompleteAndCorrect = false;
                isMistake = true;
            }

            hintDisplayEl.innerHTML = hintHTML;

            if (userInput.length === currentWord.length && isCompleteAndCorrect) {
                // L·∫•y l·∫°i t·ª´ g·ªëc c√≥ c·∫£ (n), (v) ƒë·ªÉ hi·ªÉn th·ªã
                const originalEn = vocabulary[currentWordIndex].en;
                messageEl.textContent = `üéâ Ch√≠nh x√°c! T·ª´ '${originalEn}' c√≥ nghƒ©a l√† '${vocabulary[currentWordIndex].vn}'.`;
                inputEl.disabled = true; 
            } else if (isMistake) {
                messageEl.textContent = `‚ùå L·ªói! T·ª´ ch·ªó m√†u ƒë·ªè, b·∫°n c·∫ßn s·ª≠a l·∫°i.`;
            } else if (userInput.length > 0 && !isMistake) {
                messageEl.textContent = `Ti·∫øp t·ª•c g√µ...`;
            }
        }

        // --- Thi·∫øt l·∫≠p s·ª± ki·ªán ---
        inputEl.addEventListener('input', handleInput);
        nextBtn.addEventListener('click', loadNewWord);

        // T·∫£i t·ª´ v·ª±ng khi trang load
        window.onload = loadVocabulary;
    </script>
</body>
</html>
